/* pages/detail/index.wxss */
.swiper{
  height: 720rpx;
}

.swiper image{
  width: 100%;
  height: 100%;
}

.price{
  font-size: 25px;
  color: #fe2c4b;
  margin: 20rpx 0;
}

.content{
  display: flex;
  padding: 20rpx;
}

.collect{
  text-align: center;
  color: #d0d0d0;
}

.content-name{
  flex: 9;
  padding-right: 80rpx;
  border-right: 1px solid #eee;
  font-size: 18px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}

.collect{
  flex: 3;
}

.express{
  color: #a0a0a0;
  padding: 0 20rpx 20rpx 20rpx;
  border-bottom: 20rpx solid #f4f4f4;
}

.footer{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
}

.btn-left{
  width: 20%;
  padding: 20rpx 20rpx;
  text-align: center;
  font-size: 12px;
}

.btn-right{
  width: 30%;
  font-size: 12px;
  text-align: center;
  line-height: 100rpx;
  background: #ffb415;
  color: #fff;
}

.btn-right:last-child{
  background: #fe2c4b;
}

.contact{
  position: absolute;
  left:0;
  top:0;
  width: 20%;
  height:100rpx;
  opacity: 0;
}

.detail{
  padding-bottom: 100rpx;
}